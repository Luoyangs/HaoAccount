<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/base_green"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/titilbar_left"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/btn_back"
            android:paddingRight="20sp" />

        <TextView
            android:id="@+id/titilbar_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="签到"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/titilbar_right"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:src="@drawable/btn_more" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/toplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sg"
            android:orientation="vertical"
            android:paddingTop="15dip" >

            <TextView
                android:id="@+id/tv_hint_success"
                android:layout_width="250dip"
                android:layout_height="40dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_third_hint"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="亲，今天还没有完成一键签到~"
                android:textColor="#FF0000"
                android:textSize="16sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toplay"
            android:layout_marginTop="12dip"
            android:gravity="center" >

            <ImageView
                android:id="@+id/export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_info_export_background" />

            <ImageView
                android:id="@+id/iv_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_info_export" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dip"
                android:gravity="top|center_horizontal"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_payInfo"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-255dip"
                    android:background="@drawable/bg_paysuccess_bill"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/top"
                        android:layout_width="270dp"
                        android:layout_height="110dp"
                        android:background="@drawable/top" />

                    <LinearLayout
                        android:id="@+id/ll_order_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top"
                        android:layout_marginLeft="15dip"
                        android:paddingLeft="20dp"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/tv_order_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本次获得:"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_order_num2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="10"
                            android:textColor="#00ff00"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="金币"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_total_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_order_num"
                        android:layout_marginLeft="15dip"
                        android:paddingLeft="20dp"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_total_money1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="历史最高:"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_total_money2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="10"
                            android:textColor="#ff0000"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="金币"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_total_money"
                        android:layout_marginLeft="15dip"
                        android:paddingLeft="20dp"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="连续签到:"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_payment2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="3天"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_payment_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_payment"
                        android:layout_marginLeft="15dip"
                        android:paddingLeft="20dp"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="8dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_payment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="额外奖励:"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_payment_date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="0"
                            android:textColor="@color/com_bg_dark_color"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_payment_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35dip"
                        android:textColor="@color/com_bg_dark_color"
                        android:textSize="18sp" />
                </RelativeLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/main_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>