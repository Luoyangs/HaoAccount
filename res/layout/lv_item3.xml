<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78sp"
    android:background="#eee"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="66sp"
        android:layout_height="66sp"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        android:paddingTop="6sp"
        android:src="@drawable/pp1" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12sp"
        android:layout_toRightOf="@+id/img"
        android:text="衣服饰品"
        android:textColor="#444"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/type"
        android:layout_marginRight="10dp"
        android:text="预算  0.00"
        android:textColor="#999"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/num"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_base"
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:layout_below="@+id/type"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6sp"
        android:layout_toRightOf="@+id/img"
        android:max="100"
        android:progress="40" />

    <TextView
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6sp"
        android:layout_toRightOf="@+id/img"
        android:text="已用 0.00"
        android:textColor="#999"
        android:textSize="13sp" />

</RelativeLayout>