<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/reg_menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dip"
        android:text="设置一个专属你的密码~"
        android:textColor="#D95555"
        android:textSize="16sp" />

    <View
        android:id="@+id/diviver"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/reg_menu1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#D95555" />

    <com.haoxue.haoaccount.view.DeletableEditText
        android:id="@+id/user_password_input"
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_alignLeft="@id/diviver"
        android:layout_alignRight="@id/diviver"
        android:layout_below="@id/diviver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/user_password"
        android:drawableRight="@drawable/user_delete"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:singleLine="true" >

        <requestFocus />
    </com.haoxue.haoaccount.view.DeletableEditText>

    <com.haoxue.haoaccount.view.DeletableEditText
        android:id="@+id/user_password_input2"
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_alignLeft="@id/user_password_input"
        android:layout_alignRight="@id/user_password_input"
        android:layout_below="@+id/user_password_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/user_password"
        android:drawableRight="@drawable/user_delete"
        android:ems="10"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:singleLine="true" >

        <requestFocus />
    </com.haoxue.haoaccount.view.DeletableEditText>

    <TextView
        android:id="@+id/pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/user_password_input2"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:padding="8dip"
        android:text="密码助手"
        android:textColor="#888888"
        android:textSize="12sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/personal_commit2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/user_password_input"
        android:layout_alignRight="@+id/user_password_input"
        android:layout_below="@+id/pass2"
        android:layout_marginTop="35dp"
        android:background="@drawable/selector_logout"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>