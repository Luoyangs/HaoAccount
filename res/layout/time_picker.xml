<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="12dp"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corners_bg3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e1e1e1"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:visibility="gone" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:contentDescription="@null"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dip"
                android:gravity="left"
                android:text="选择时间"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42sp"
            android:background="#F0F0F0"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年"
                android:textColor="#000000"
                android:textSize="20dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月"
                android:textColor="#000000"
                android:textSize="20dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textColor="#000000"
                android:textSize="20dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时"
                android:textColor="#000000"
                android:textSize="20dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="分"
                android:textColor="#000000"
                android:textSize="20dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="秒"
                android:textColor="#000000"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <com.haoxue.haoaccount.view.wheel.WheelView
                android:id="@+id/yearwheel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.haoxue.haoaccount.view.wheel.WheelView
                android:id="@+id/monthwheel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.haoxue.haoaccount.view.wheel.WheelView
                android:id="@+id/daywheel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.haoxue.haoaccount.view.wheel.WheelView
                android:id="@+id/hourwheel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.haoxue.haoaccount.view.wheel.WheelView
                android:id="@+id/minutewheel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.haoxue.haoaccount.view.wheel.WheelView
                android:id="@+id/secondwheel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="6sp"
        android:layout_marginTop="20sp"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:padding="5dip"
        android:visibility="gone" >

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_dialog_btn_danger_rounded"
            android:singleLine="true"
            android:text="取    消"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dip"
            android:layout_weight="1"
            android:background="@drawable/custom_dialog_info_rounded"
            android:singleLine="true"
            android:text="确    定"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:background="#000"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btnok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/select_bg2"
            android:gravity="center"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:text="确  定"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>