<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/head1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/base_green"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/changInfo"
                android:layout_width="wrap_content"
                android:layout_height="36sp"
                android:layout_marginRight="10sp"
                android:gravity="center_vertical"
                android:text="修改信息"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lay3"
        android:layout_below="@+id/head1"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/pifu"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15sp"
                android:background="@drawable/select_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="15sp"
                android:paddingRight="10sp" >

                <TextView
                    android:id="@+id/pifu_text"
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/pifu"
                    android:drawablePadding="6sp"
                    android:gravity="center_vertical"
                    android:text="皮肤 换个漂亮皮肤吧..."
                    android:textColor="@color/base_dark" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tongzhi"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="15sp"
                android:paddingRight="10sp" >

                <TextView
                    android:id="@+id/tongzhi_text"
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/message_press"
                    android:drawablePadding="6sp"
                    android:gravity="center_vertical"
                    android:text="通知 您有新的通知..."
                    android:textColor="@color/base_dark" />

                <ImageView
                    android:id="@+id/msg_unread0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/unread_count_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="15sp"
                android:paddingRight="10sp" >

                <TextView
                    android:id="@+id/app_text"
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/app"
                    android:drawablePadding="6sp"
                    android:gravity="center_vertical"
                    android:text="应用 每天都有好应用..."
                    android:textColor="@color/base_dark" />

                <ImageView
                    android:id="@+id/msg_unread1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/unread_count_bg" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:paddingLeft="12sp"
                android:text="好应用 "
                android:textColor="#707070"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gv_tianqi"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home_tianqi"
                 android:drawablePadding="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="15sp"
                android:text="天气预报"
                android:clickable="true"
                android:background="@drawable/select_bg"
                android:textColor="@color/base_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gv_jiankang"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home_jiankang"
                android:drawablePadding="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="15sp"
                android:text="健康资讯"
                android:clickable="true"
                android:background="@drawable/select_bg"
                android:textColor="@color/base_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gv_jingdian"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home_jingdian"
                android:drawablePadding="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="15sp"
                android:text="景点查询"
                android:clickable="true"
                android:background="@drawable/select_bg"
                android:textColor="@color/base_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gv_kuaile"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home_kuaile"
                android:drawablePadding="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="15sp"
                android:text="每日一乐"
                android:clickable="true"
                android:background="@drawable/select_bg"
                android:textColor="@color/base_dark"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#ccc" >

        <TextView
            android:id="@+id/set"
            android:layout_width="0sp"
            android:layout_height="43dip"
            android:layout_weight="1"
            android:drawableLeft="@drawable/setting"
            android:background="#fff"
            android:drawablePadding="5sp"
            android:gravity="left|center_vertical"
            android:text="设置"
            android:paddingLeft="15sp"
            android:textColor="@color/base_dark"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="24sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:background="@color/base_dark" />

        <TextView
            android:id="@+id/exit"
            android:layout_width="0sp"
            android:layout_height="43dip"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="right|center_vertical"
            android:text="退    出"
            android:paddingRight="25sp"
            android:textColor="@color/base_dark"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>