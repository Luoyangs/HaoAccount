<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/keyboard_bg_style"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/keyval"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingRight="6sp"
        android:textColor="#fff"
        android:clickable="true"
        android:background="@drawable/keyboard_bg_big"
        android:gravity="right|center_vertical"
        android:text="0.00"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboard_btn7"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn8"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn9"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btndel"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="←"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboard_btn4"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn5"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btn6"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keyboard_btnclr"
            android:layout_width="0sp"
            android:layout_height="50dp"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="C"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="1px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/keyboard_btn1"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:background="@drawable/keyboard_bg_small"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="1"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/keyboard_btn2"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1px"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:background="@drawable/keyboard_bg_small"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="2"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/keyboard_btn3"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1px"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:background="@drawable/keyboard_bg_small"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="3"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/keyboard_btn0"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:textColor="#fff"
                    android:background="@drawable/keyboard_bg_small"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/keyboard_btndot"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1px"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:background="@drawable/keyboard_bg_small"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="."
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/keyboard_btnok"
            android:layout_width="0sp"
            android:layout_height="101dp"
            android:layout_weight="1"
            android:textColor="#00ff00"
            android:background="@drawable/keyboard_bg_small"
            android:gravity="center_horizontal|center_vertical"
            android:text="OK"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>